{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "rootDir": "./",
        "sourceMap": true,
        "outDir": "./out",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "exclude": ["tests", "out", "node_modules", ".github", "docs"],
    "include": ["*.ts", "**/*.ts"]
}